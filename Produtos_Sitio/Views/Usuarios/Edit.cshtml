@model Produtos_Sitio.Models.Usuario

@{
    ViewData["Title"] = "Usuário - Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btn-topo">
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
<h1>Editar Usuário</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="apelido" class="control-label"></label>
                <input asp-for="apelido" class="form-control" />
                <span asp-validation-for="apelido" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Atualizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
