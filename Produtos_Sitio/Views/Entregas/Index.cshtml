@model IEnumerable<Produtos_Sitio.Models.Entrega>

@{
    ViewData["Title"] = "Entregas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Entregas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.venda.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.venda.cliente.nome)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.venda.cliente.endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data_entrega)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.entregue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.venda.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venda.cliente.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venda.cliente.endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data_entrega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.entregue)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
