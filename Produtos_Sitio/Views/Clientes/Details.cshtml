@model Produtos_Sitio.Models.Cliente

@{
    ViewData["Title"] = "Cliente - Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="btn-topo">
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
<h1>Detalhes do Cliente</h1>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.telefone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.telefone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.endereco)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary">Editar</a>
</div>
